    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

</head>
<body>
  <nav class="navbar navbar-expand navbar-light bg-light">
    <!-- <a class="navbar-brand" href="/">Home</a> -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item ">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/category_show">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/subcategory_show">Subcategories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/brand_show">Brands</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/product_show">Products</a>
            </li>
        </ul>

    </div>
</nav>
    <div class="container">
      <h3><a href="/product_create">Create Product</a></h3>
      <h1>Product List</h1>
     
    
      <table class="table table-hover table-bordered table-striped table-condensed" id="table_id">

        <thead>
          <tr>
            <th>product Name</th>
            <th>brand Name</th>
            <th>Subcategory Name</th>
            <th>Category Name</th>
            <th>product image</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<data.length;i++) { %>
          <tr>
            <td><%=data[i].product %></td>
            <td><%=data[i].brand %></td>
            <td><%=data[i].subcategory %></td>
            <td><%=data[i].categoryname %></td>
            <td> <img alt="image" src="/uploads/<%=data[i].img%>" width="70" height="70"></td>
            <td><a href="/product_edit/<%=data[i]._id%>" class="btn btn-primary">Edit</a></td>
            <td>
                <form action="/product_delete/<%=data[i]._id%>/<%=data[i].img%>" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
       
</body>
<script>
  $(document).ready( function () {
      $('#table_id').DataTable({
          // "pageLength": 5,
          columnDefs: [{ searchable: false, targets: [4,5,6]},{ orderable: false, targets: [4,5,6]}]
      });
  });
  </script> 
